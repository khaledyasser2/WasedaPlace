<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Your Room</title>
  <style>
    .bg-white {
      background-color: white;
    }
    .text-gray-900 {
      color: #212529;
    }
    .font-sans {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }
    .flex {
      display: flex;
    }
    .flex-col {
      flex-direction: column;
    }
    .items-center {
      align-items: center;
    }
    .text-4xl {
      font-size: 2.25rem;
    }
    .font-bold {
      font-weight: bold;
    }
    .full-width-line {
      width: 100%;
      border: 1px solid #ccc;
      margin: 10px 0;
    }
    .dropdown-container {
      margin-bottom: 10px;
    }
    .dropdown-menu {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .booking-button {
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
  </style>
</head>
<% periods=[1,2,3,4,5,6,7] %>
<% days=["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"] %>
<h1>Select Date and Period</h1>
<body>
  <div class="bg-white text-gray-900 font-sans">
    <main class="flex flex-col items-center">
      <h1 class="text-4xl font-bold">Book Your Room</h1>
      <hr class="full-width-line">

      <div class="dropdown-container">
        <%= form_tag(booking_index_path, method: "get") do %>
          <div>
            <label for="date">Date:</label>
            <%# <%= select_tag :date, options_for_select(days), include_blank: true %>
            <%= select_tag :date, options_for_select(days), class: 'dropdown-menu', value: 'Day'%>
          </div>
          <div>
            <label for="period">Period:</label>
            <%= select_tag :period, options_for_select(periods), class: 'dropdown-menu', value: 'Period' %>
          </div>
          <button type="submit" class="booking-button" style="">Submit</button>
        <% end %>
      </div>
    </main>
  </div>
</body>

<% if @available_rooms&.any?%>
  <% if logged_in? %>
    <h2>Available Rooms</h2>
    <div class="rooms">
    <% @available_rooms.each do |room, users| %>
      <p><%= room %> -
      <%= form_tag booking_index_path, method: :post do %>
        <%# <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :room, room %>
        <%= hidden_field_tag :period, @selected[:period] %>
        <%= hidden_field_tag :date, @selected[:date] %>
        <div>
          <label for="entire_room">Do you mind other users booking this room?</label>
          <%= check_box :entire_room, "entire_room"%>
          <%# <%= hidden_field_tag :entire_room, "0" %>
        </div>
        <%= submit_tag "book" %>
      <% end %>
      <% if users != nil  %>
        <%= "There are already #{users.size} users here" %>
      <% end %>
      </p>
    <% end %>
    </div>
  <% else %>
    please log in
  <% end %>
<% end %>
